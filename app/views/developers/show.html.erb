<h1>Developers#show</h1>
<p>Find me in app/views/developers/show.html.erb</p>

<%= @developer.user.email %>

<%= @developer.rating %>

<%= @developer.description %>

<%= simple_form_for [@developer, @booking] do |f| %>
  <%= f.input :job %>
  <%= f.submit :book %>
<% end %>

  <% if policy(@developer).update? %>
      <%= link_to "Edit", edit_developer_path(@developer) %>
  <% end %>
  <% if policy(@developer).destroy? %>
    <%= link_to "Delete",developer_path(@developer),method: :delete,data: { confirm: "Are you sure?" } %>
  <% end %>
