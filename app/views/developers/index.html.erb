<h1 class='dev-header'>$ <span class='diff'>Developer</span>.all</h1><span class ></span>
<br>
<div class="container">
  <%= form_tag developers_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find the language that you need"
    %>
   <%= submit_tag "Search", class: "btn btn-primary" %>
   <% end %>

   <div class="row justify-content-center">
   <% if @mydev = false %>
    <div class="col-xl-3 col-sm-6 mb-3 flip-card border">
      <div class="flip-card-inner">
        <div class="flip-card-front d-flex flex-column justify-content-around align-items-center shadow-sm rounded">
          <img src='https://www.kindpng.com/picc/m/451-4517876_default-profile-hd-png-download.png' alt="" width="100" class="rounded-circle">
          <h5 class="mb-0">You!</h5><span class="small text-uppercase text-muted">Expert in: _____<br> your-email@you.com </span>
                  ⭐⭐⭐⭐⭐
        </div>
        <div class="flip-card-back d-flex flex-column justify-content-between rounded">
          <h2 class='pt-3'>Become a developer today!</h2>
          <span class="small text-uppercase text-muted"></span>
          <ul class="social mb-0 list-inline mt-3">
            <li class="list-inline-item"><a href="#" class="social-link"><i class="fab fa-facebook"></i></a></li>
            <li class="list-inline-item"><a href="#" class="social-link"><i class="fab fa-twitter"></i></a></li>
            <li class="list-inline-item"><a href="#" class="social-link"><i class="fab fa-instagram"></i></a></li>
            <li class="list-inline-item"><a href="#" class="social-link"><i class="fab fa-linkedin"></i></a></li>
          </ul>
          <%= link_to '$ Developer.new', new_developer_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <% end %>
      <% @developers.each do |d| %>
        <div class="col-xl-3 col-sm-6 mb-3 flip-card border">
            <div class="flip-card-inner">
              <div class="flip-card-front d-flex flex-column justify-content-around align-items-center shadow-sm rounded">
              <%= image_tag d.photo, class: "rounded-circle" %>
                <h5 class="mb-0"><%= d.first_name %></h5><span class="small text-uppercase text-muted">Expert in: <%= d.language %><br> <%= d.user.email %> </span>
                <% rating = d.rating.to_i %>
                <% rating.times do %>
                  ⭐
                <% end %>
            </div>
            <div class="flip-card-back d-flex flex-column justify-content-between rounded">
              <h2 class='pt-3'>Why me?</h2>
              <span class="small text-uppercase text-muted"><%= d.description %></span>
              <ul class="social mb-0 list-inline mt-3">
                <li class="list-inline-item"><a href="#" class="social-link"><i class="fab fa-facebook"></i></a></li>
                <li class="list-inline-item"><a href="#" class="social-link"><i class="fab fa-twitter"></i></a></li>
                <li class="list-inline-item"><a href="#" class="social-link"><i class="fab fa-instagram"></i></a></li>
                <li class="list-inline-item"><a href="#" class="social-link"><i class="fab fa-linkedin"></i></a></li>
              </ul>
              <%= link_to 'Hire', developer_path(d), class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
